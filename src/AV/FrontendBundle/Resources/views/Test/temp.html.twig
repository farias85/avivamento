<form name="form">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="row">
                <input type="button" class="btn btn-sm btn-default"
                       ng-disabled="loading === true"
                       ngf-select ng-model="file" name="file"
                       value="{| 'seleccione' | translate |}"
                       ngf-accept="'.pdf,.doc'">
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <small>{{'tamanno.maximo'| trans}} {{ maxFileSize }}MB</small>
                </div>
            </div>
            <br>

            <div class="row" ng-show="file.name">
                {| file.name |}
            </div>
            <br>

            <div class="row">
                <button class="btn btn-md btn-primary" ng-click="submitFile()" ng-disabled="!file.name">
                    {{'guardar'| trans}}
                </button>
            </div>
        </div>
    </div>
</form>