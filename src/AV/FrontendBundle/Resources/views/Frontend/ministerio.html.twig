{% extends 'FrontendBundle:Layout:frontend.html.twig' %}

{% block wrapper %}

    <!--==========================
      Speaker Details Section
    ============================-->
    <section id="speakers-details" class="wow fadeIn">
        <div class="container">
            <div class="section-header">
                <h2>{{ 'f.nuestro.ministerio' | trans }}</h2>
                <p>{{ 'f.un.poco.de.historia' | trans }}</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <img src="{{ asset('bundles/frontend/images/padre.jpg') }}" alt="David Arguelles Figueredo"
                         class="img-fluid">
                </div>

                <div class="col-md-6">
                    <div class="details">
                        <h2>David Arguelles Figueredo</h2>
                        <div class="social">
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-google-plus"></i></a>
                            <a href="#"><i class="fa fa-linkedin"></i></a>
                        </div>
                        <p>{{ 'f.la.historia.p1' | trans({}, 'historia') }}</p>
                        <p>{{ 'f.la.historia.p2' | trans({}, 'historia') }}</p>
                        <p>{{ 'f.la.historia.p3' | trans({}, 'historia') }}</p>
                        <p>{{ 'f.la.historia.p4' | trans({}, 'historia') }}</p>
                    </div>
                </div>

            </div>
        </div>

    </section>

    <hr>
    <section id="faq" class="wow fadeInUp">
        <div class="container">
            <div class="section-header">
                <h2>{{ 'f.preguntas.respuestas.frecuentes' | trans }} </h2>
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-9">
                    <ul id="faq-list">

                        {% for faq in faqs %}
                            <li>
                                <a data-toggle="collapse" class="collapsed" href="#faq{{ loop.index }}">
                                    {{ faq.any.pregunta }}
                                    <i class="fa fa-minus-circle"></i></a>
                                <div id="faq{{ loop.index }}" class="collapse" data-parent="#faq-list">
                                    <p>
                                        {{ faq.any.respuesta | raw }}
                                    </p>
                                </div>
                            </li>
                        {% endfor %}

                    </ul>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
