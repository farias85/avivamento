{% extends ':backend:backend.base.html.twig' %}

{% block body %}
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Avivamento</a>
            </div>
            <!-- /.navbar-header -->

            {% include ':backend:_backend.layout.navbar-top-links.html.twig' %}
            <!-- /.navbar-top-links -->

            {% include ':backend:_backend.layout.navbar-default-sidebar.html.twig' %}
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {% block page_header %}
                            {{ name | default('Dashboard') }}
                        {% endblock %}
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {% block page_header_sub %} {% endblock %}
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {% block content %} {% endblock %}
                        </div>
                        <div class="panel-footer">
                            {% block footer %} {% endblock %}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}
