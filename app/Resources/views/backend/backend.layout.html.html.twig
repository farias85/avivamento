{% extends ':backend:backend.base.html.twig' %}

{% block body %}
    <div id="wrapper">

        {% include ':backend:_backend.layout.nav.html.html.twig' %}

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {% block page_header %}
                            {{ name | default('Dashboard') }}
                        {% endblock %}
                    </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            {% block page_header_sub %} {% endblock %}
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            {% block content %} {% endblock %}
                        </div>
                        <div class="panel-footer">
                            {% block footer %} {% endblock %}
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->
{% endblock %}
