{% extends ':frontend:frontend.base.html.twig' %}

{% block nav %}

    <header id="header" {% if isIndex is not defined %} class="header-fixed" {% endif %}>
        <div class="container">

            <div id="logo" class="pull-left">
                <!-- Uncomment below if you prefer to use a text logo -->
                <!-- <h1><a href="#main">C<span>o</span>nf</a></h1>-->
                {% if isIndex is not defined %}
                    {% set home = path('frontend_homepage', {'_locale': app.request.locale}) %}
                {% else %}
                    {% set home = '#intro' %}
                {% endif %}
                <a href="{{ home }}" class="scrollto">
                    <img src="{{ asset('bundles/frontend/event/img/logo.png') }}" alt="" title=""></a>
            </div>

            <nav id="nav-menu-container">
                <ul class="nav-menu">
                    <li class="menu-active"><a href="{{ home }}">{{ 'inicio' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.ministerio' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.adoracion.y.alabanzas' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.momentos.supernaturales' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.ensenanzas' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.trabajo.comunitario' | trans }}</a></li>
                    <li><a href="#">{{ 'nav.eventos' | trans }}</a></li>
                    <li><a href="#">Donaciones </a></li>
                    {#<li><a href="#">Donations</a></li>#}
                    {#<li><a href="#sponsors">Sponsors</a></li>#}
                    {#<li><a href="#contact">Contact</a></li>#}
                    {#<li class="buy-tickets"><a href="#buy-tickets">Buy Tickets</a></li>#}
                </ul>
            </nav><!-- #nav-menu-container -->
        </div>
    </header><!-- #header -->

{% endblock %}
